<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saylik.iteration">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <!--<uses-permission android:name="android.permission.CAMERA"></uses-permission>-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".RecordEstimation"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".CalculateIteration"
            android:label="@string/title_activity_calculate_iteration">

        </activity>
        <activity
            android:name=".ShowIterations"
            android:label="@string/title_activity_show_iterations"></activity>
    </application>

</manifest>
