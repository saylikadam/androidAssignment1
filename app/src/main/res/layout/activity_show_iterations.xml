<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.saylik.iteration.ShowIterations">

    <LinearLayout
        android:id="@+id/iterations_block"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/showIteration_block"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iterations"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="@string/iterations"
                android:textSize="28dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/show_iterations"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:paddingLeft="25dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buffer_block"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/buffer"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="@string/buffer"
                android:textSize="28dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/show_buffer"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:paddingLeft="25dp"
                android:inputType="number"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/calculate_iteration_with_buff"
        android:text="calculate iteration with buffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:clickable="true"
        android:layout_below="@+id/main_block"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="calcIterWithBuff" />


</RelativeLayout>
